{
  "name": "nlw-copa",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/apps/*",
    "packages/shared/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "web": "yarn workspace @nlw-copa/web",
    "server": "yarn workspace @nlw-copa/server",
    "mobile": "yarn workspace @nlw-copa/mobile",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "server:start": "node build/src/server.js"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-custom": "*",
    "prettier": "2.7.1",
    "turbo": "1.6.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "zod": "^3.19.1"
  },
  "engines": {
    "node": "16.x"
  },
  "packageManager": "yarn@1.22.19"
}
