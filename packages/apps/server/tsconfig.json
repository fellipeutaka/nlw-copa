{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDirs": ["./src", "./prisma"],
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {},
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules"]
}
