{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDirs": ["./src", "./prisma"],
    "outDir": "./build",
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@nlw-copa/routes/*": ["./routes/*"],
      "@nlw-copa/lib/*": ["./lib/*"],
      "@nlw-copa/plugins/*": ["./plugins/*"]
    }
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules"]
}
